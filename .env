# Application Settings
APP_NAME=MultiAIAgentsRAG
APP_ENV=production
APP_DEBUG=False
APP_PORT=8000

# FastAPI Settings
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region
AWS_BUCKET_NAME=your_s3_bucket_name

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=your_pinecone_index_name

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION_ID=your_openai_organization_id

# Database Configuration (if needed for metadata storage)
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Nuxt.js Frontend
NUXT_API_BASE_URL=http://localhost:8000

# Docker Settings
DOCKER_IMAGE_NAME=multi-ai-agents-rag
DOCKER_CONTAINER_NAME=multi-ai-agents-container

# GitHub Actions Secrets (used for CI/CD)
GITHUB_TOKEN=your_github_token
DOCKER_USERNAME=your_dockerhub_username
DOCKER_PASSWORD=your_dockerhub_password

# Batch Processing Settings
BATCH_SIZE=50
EPOCHS=10

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log

# Security and Authentication
SECRET_KEY=your_super_secret_key
JWT_EXPIRATION_TIME=3600  # in seconds

# Miscellaneous
DEFAULT_LANGUAGE=en
ENV SPARK_HOME=/opt/spark
ENV PATH=$SPARK_HOME/bin:$PATH
ENV PYSPARK_PYTHON=python3
ENV PYSPARK_DRIVER_PYTHON=python3